fun swap(int *a, int *b)
begin
  int tmp;
  tmp = *a;
  *a = *b;
  *b = tmp;
end

int x[4] = {1, 2, 3, 4};

fun main
begin
  int y = 6;
  int i = 0;
  while(i < 4) do
    printint(x[i]);
    i = i + 1;
  end;

  swap(&x[2], &y);

  printint(y);
  i = 0;
  while(i < 4) do
    printint(x[i]);
    i = i + 1;
  end;

  return y == 3;
end
